{
    "name": "tipoff/reviews",
    "description": "Laravel Package for tracking Google reviews",
    "keywords": [
        "tipoff",
        "reviews"
    ],
    "homepage": "https://github.com/tipoff/reviews",
    "license": "MIT",
    "authors": [
        {
            "name": "Tipoff",
            "email": "packages@tipoff.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "google/apiclient": "^2.7",
        "tipoff/support": "^1.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.3",
        "spatie/laravel-ray": "^1.9",
        "vimeo/psalm": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "Tipoff\\Reviews\\": "src",
            "Tipoff\\Reviews\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tipoff\\Reviews\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Tipoff\\Reviews\\ReviewsServiceProvider"
            ],
            "aliases": {
                "Reviews": "Tipoff\\Reviews\\ReviewsFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
